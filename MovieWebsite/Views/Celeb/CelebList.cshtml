@model List<MovieWebsite.Models.Celebrity>

@{
    ViewBag.Title = "Celebrity";
    int totalCeleb = ViewBag.TotalCeleb;
}
<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1>celebrity list</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="#">Home</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> Celebrity</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div style="padding:8px;" class="topbar-filter">
                    <p class="pad-change">Found <span>@totalCeleb celebrities</span> in total</p>
                   
                </div>
                <div class="row">
                    @foreach (var celeb in Model)
                    {
                    <div class="col-md-4">
                        <div class="ceb-item-style-2">
                            <img style="width: 80px; height=100px;" src="/Content/images/uploads/@celeb.Avatar" alt="">
                            <div class="ceb-infor">
                                <h2><a href="/celebrity/@celeb.Meta">@celeb.Name</a></h2>
                                <span>@celeb.Role.ToUpper(), @celeb.Country.ToUpper()</span>
                            </div>
                        </div>
                    </div>
                    }
                    
                </div>
                <div style="padding:8px;" class="topbar-filter">
                    @Html.Action("CelebPagination", "Celeb", new { currPage = ViewBag.Page, totalPages = ViewBag.PageCount })
                </div>
            </div>
            <div class="col-md-3 col-xs-12 col-sm-12">
                <div class="sidebar">
                    <div class="searh-form">
                        <h4 class="sb-title">Search  for celebrity</h4>
                        <form class="form-style-1 celebrity-form" action="/celebrity">
                            <div class="row">
                                <div class="col-md-12 form-it">
                                    <label>Celebrity name</label>
                                    <input name="name" type="text" placeholder="Enter keywords">
                                </div>
                                <div class="col-md-12 ">
                                    <input class="submit" type="submit" value="submit">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="ads">
                        <img src="/Content/images/uploads/ads1.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

