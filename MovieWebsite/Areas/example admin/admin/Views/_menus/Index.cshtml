@using ShopOnline.Help
@model IEnumerable<ShopOnline.Models.menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/adminLayout.cshtml";
}
@section _header{
    <link href="~/Areas/admin/Content/vendor_/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank"
                                                               href="https://datatables.net">official DataTables documentation</a>.
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Html.ActionLink("Thêm mới", "Create")</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Tên menu
                        </th>
                        <th>
                            Liên kết
                        </th>
                        <th>
                            ....
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.hide)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.datebegin)
                        </th>
                        <th></th>
                    </tr>
                </thead>


                @{var Number = 1; }
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.Raw(Number++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.meta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.hide)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.order)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.datebegin)
                        </td>
                        <td>

                            <a href="@Url.Action("Edit", "_menus", new { id = item.id })" class="btn btn-google btn-block">
                                <i class="fab fa-google fa-fw"></i>    Sửa
                            </a>

                            <a href="@Url.Action("Delete", "_menus", new { id = item.id })" class="btn btn-google btn-block">
                                <i class="fab fa-google fa-fw"></i>    Xóa
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
@section _footer{
    <!-- Page level plugins -->
    <script src="~/Areas/admin/Content/vendor_/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor_/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/Areas/admin/Content/js_/demo/datatables-demo.js"></script>
}
