    <div class="login-wrapper" id="login-content">
    <div class="login-content">
        <a href="#" class="close"><i class="fa fa-times"></i></a>
        <h3>Login</h3>
        <form method="post" id="loginForm">
        	<div class="row">
        		 <label for="username">
                    Username:
                    <input type="text" name="username" id="username" required="required" />
                </label>
        	</div>
           
            <div class="row">
            	<label for="password">
                    Password:
                    <input type="password" name="password" id="password" required="required" />
                </label>
            </div>
            <div class="row">
                <div class="error-message" style="color: red; display: none;"></div>
            </div>
            <div class="row">
            	<div class="remember">
					<div>
						<input type="checkbox" name="remember" id="remember" value="Remember me"><span>Remember me</span>
					</div>
            		<a href="#">Forget password ?</a>
            	</div>
            </div>
           <div class="row">
           	 <button type="submit" id="loginButton">
           	 	<span class="button-text">Login</span>
           	 	<span class="spinner-border spinner" style="display: none; margin-left: 5px;" role="status" aria-hidden="true"></span>
           	 </button>
           </div>
        </form>
        <div class="row">
        	<p>Or via social</p>
            <div class="social-btn-2">
            	<a class="fb" href="#"><i class="ion-social-facebook"></i>Facebook</a>
            	<a class="tw" href="#"><i class="ion-social-twitter"></i>twitter</a>
            </div>
        </div>
    </div>
</div>
<!--end of login form popup-->
<!--signup form popup-->
<div class="login-wrapper"  id="signup-content">
    <div class="login-content">
        <a href="#" class="close"><i class="fa fa-times"></i></a>
        <h3>sign up</h3>
        <form method="post" id="loginForm">
    <div class="row">
        <label for="username">
            Username:
            <input type="text" name="username" id="username" required="required" />
        </label>
    </div>
    
    <div class="row">
        <label for="password">
            Password:
            <input type="password" name="password" id="password" required="required" />
        </label>
    </div>
    
    <!-- Thêm div để hiển thị thông báo lỗi -->
    <div class="row">
        <div class="error-message" style="color: red; display: none;"></div>
    </div>
    
    <div class="row">
        <div class="remember">
            <div>
                <input type="checkbox" name="remember" id="remember" value="Remember me"><span>Remember me</span>
            </div>
            <a href="#">Forget password ?</a>
        </div>
    </div>
    
    <div class="row">
        <button type="submit" id="loginButton">
            <span class="button-text">Login</span>
            <span class="spinner-border spinner" style="display: none; margin-left: 5px;" role="status" aria-hidden="true"></span>
        </button>
    </div>
</form>
    </div>
</div>
    @{
        Html.RenderAction("GetMenu", "Default");
    }
    @RenderBody()
    @{ 
        Html.RenderAction("GetFooter", "Default");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
        });
    </script>
    @Scripts.Render("~/Scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>